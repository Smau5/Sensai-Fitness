<div class="container">
    <h1>Edit speciality</h1>
    <%= form_for @speciality do |s| %>
        <div class="form-group">
            <%= s.label :name, "Name" %>
            <%= s.text_field :name, class: "form-control"  %>
        </div>
        <div class="form-group">
            <%= s.label :description, "Description" %>
            <%= s.text_field :description, class: "form-control" %>
        </div>
        <%= s.submit class: "btn btn-xs btn-primary"%>
    <% end %>
</div>