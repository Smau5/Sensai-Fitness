<div class="container">
    <h1>Register plan</h1>
    <%= form_for @plan do |p| %>
        <div class="form-group">
            <%= p.label :name, "Name" %>
            <%= p.text_field :name, class: "form-control"  %>
        </div>
        <div class="form-group">
            <%= p.label :description, "Description" %>
            <%= p.text_field :description, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= p.label :price, "Price" %>
            <%= p.text_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Tags</label>
            <ul>
            <% @tags.each do |tag| %>
                <li>
                    <% if @plan.tags.include?(tag) %>
                        <%= check_box_tag 'tag_ids[]', tag.id , {:checked => "checked"} %>
                    <% else %>
                        <%= check_box_tag 'tag_ids[]', tag.id %>
                    <% end %>
                    <%= h tag.name %>
                </li>
            <% end %>
            </ul>
        </div>
        <div class="form-group">
            <%= p.label :fitness_resource_id, 'Fitness resource name'%>
            <%= collection_select(:plan, :fitness_resource_id, FitnessResource.all, :id, :name, {}, {class: "form-control"} ) %>
        </div>
        <%= p.submit class: "btn btn-xs btn-primary"%>
    <% end %>
</div>