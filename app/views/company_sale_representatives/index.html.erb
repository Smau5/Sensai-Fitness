<div class="container">
    <h1>Company Sale Representative List</h1>
    <% @company_sale_representatives.each do |sale_representative| %>
    <div class="row">
        <div class="col">
            <%= sale_representative.id %>
        </div>
        <div class="col">
            <%= sale_representative.name %>
        </div>
        <div class="col">
            <%= sale_representative.lastName %>
        </div>
        <%= link_to "Edit this Sale representative", edit_company_sale_representative_path(sale_representative), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this Sale representative", company_sale_representative_path(sale_representative), 
                method: :delete, 
                data: { confirm: "Are you sure?" }, 
                class: "btn btn-xs btn-danger" %>
    </div>
    </br>
    <% end %>
</div>