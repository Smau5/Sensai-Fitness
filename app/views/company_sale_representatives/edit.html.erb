<div class="container">
    <h1>Edit sale representative</h1>
    <%= form_for @company_sale_representative do |c| %>
        <div class="form-group">
            <%= c.label :name %>
            <%= c.text_field :name, class: "form-control"  %>
        </div>
        <div class="form-group">
            <%= c.label :lastName %>
            <%= c.text_field :lastName, class: "form-control" %>
        </div>
        <%= c.submit %>
    <% end %>
</div>