<div class="container">
    <h1>Create discipline type</h1>
    <%= form_for @discipline_type do |d| %>
        <div class="form-group">
            <%= d.label :name, "Name" %>
            <%= d.text_field :name, class: "form-control"  %>
        </div>
        <div class="form-group">
            <%= d.label :description, "Description" %>
            <%= d.text_field :description, class: "form-control" %>
        </div>
        <%= d.submit class: "btn btn-xs btn-primary"%>
    <% end %>
</div>