<div class="container">
    <h1>Company Leads List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Cellphone</th>
                <th>Source</th>
                <th>Transaction</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% @company_leads.each do |company_lead| %>
            
                <tr>
                    <td><%= company_lead.name_with_lastname %></td>
                    <td><%= company_lead.email %></td>
                    <td><%= company_lead.cellphone %></td>
                    <td><%= company_lead.company_lead_source.description if company_lead.company_lead_source %></td>
                    <td><%= link_to "Transaction", 
                                    {:controller => "company_lead_transactions", :action => "new", :company_lead_id => company_lead.id },
                                    class: "btn btn-xs btn-success"%>
                    </td>
                    <td><%= link_to "Edit", 
                                    edit_company_lead_path(company_lead), 
                                    class: "btn btn-xs btn-primary" %>
                    </td>
                    <td><%= link_to "Delete", 
                                    company_lead_path(company_lead), 
                                    method: :delete, 
                                    data: { confirm: "Are you sure?" }, 
                                    class: "btn btn-xs btn-danger" %>
                    </td>

                </tr>
            <% end %>
        </tbody>
    </table>
</div>