<div class="container">
    <h1>Lead Sources List</h1>
    <% @company_lead_sources.each do |company_lead_source| %>
    <div class="row">
        <div class="col">
            <%= company_lead_source.id %>
        </div>
        <div class="col">
            <%= company_lead_source.description %>
        </div>
        <%= link_to "Edit this lead source", edit_company_lead_source_path(company_lead_source), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this lead source", company_lead_source_path(company_lead_source), 
                method: :delete, 
                data: { confirm: "Are you sure?" }, 
                class: "btn btn-xs btn-danger" %>
    </div>
    </br>
    <% end %>
</div>