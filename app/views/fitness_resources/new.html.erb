<div class="container">
    <h1>Create fitness resource</h1>
    <%= form_for @fitness_resource do |f| %>
        <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control"  %>
        </div>
        <div class="form-group">
            <%= f.label :address, "Address" %>
            <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :phone, "Phone" %>
            <%= f.text_field :phone, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :website, "Website" %>
            <%= f.text_field :website, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :openTime, "Open time" %>
            <%= f.time_select :openTime,{ minute_step: 30} %>
        </div>
        <div class="form-group">
            <%= f.label :closeTime, "Close time" %>
            <%= f.time_select :closeTime,{ minute_step: 30} %>
        </div> 
        <div class="form-group">
            <%= f.label :resource_type_id, 'Resource type'%>
            <%= collection_select(:fitness_resource, :resource_type_id, ResourceType.all, :id, :name, {}, {class: "form-control"} ) %>
        </div>
        <div class="form-group">
            <%= f.label :avatar, "Photo" %>
            <%= f.file_field :avatar, multiple: false, direct_upload: true %>
        </div>
        <div class="col-sm-4">
            <% if @fitness_resource.avatar.attached? %>
                <%= image_tag @fitness_resource.avatar.variant(resize: "100x100"), class: "rounded-circle" %>
            <% end %>
        </div>   
        <%= f.submit class: "btn btn-xs btn-primary"%>
    <% end %>
</div>