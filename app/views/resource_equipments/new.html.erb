<div class="container">
    <h1>Add equipment to fitness resource</h1>
        <fieldset disabled>
            <div class="form-group">
                <label for="disabledTextInput">Resource name</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @fitness_resource.name %>" >
            </div>
            <div class="form-group">
                <label for="disabledTextInput">Address</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @fitness_resource.address %>" >
            </div>
            <div class="form-group">
                <label for="disabledTextInput">Phone</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @fitness_resource.phone %>">
            </div>
            <div class="form-group">
                <label for="disabledTextInput">Website</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @fitness_resource.website%>">
            </div>
            <div class="form-group">
                <label for="disabledTextInput">Open time</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @fitness_resource.openTime.strftime("%I:%M %P")%>">
            </div>
            <div class="form-group">
                <label for="disabledTextInput">Close time</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @fitness_resource.closeTime.strftime("%I:%M %P")%>">
            </div>
            <div class="form-group">
                <label for="disabledTextInput">Type</label>
                <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @fitness_resource.resource_type.name%>">
            </div>
        </fieldset>
        <%= form_for @resource_equipment do |f| %>
            <div class="form-group">
                <%= f.label :equipment_id, 'Equipment name'%>
                <%= collection_select(:resource_equipment, :equipment_id, Equipment.all, :id, :name, {}, {class: "form-control"} ) %>
            </div>
            <%= f.hidden_field :fitness_resource_id ,value: @fitness_resource.id %>
            <%= f.submit "Add equipment", :class => "btn btn-xs btn-primary"%>
        <% end %>
</div>